{
    "name": "capsule/di",
    "description": "A PSR-11 compliant autowiring dependency injection container.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "di",
        "dependency",
        "injection",
        "dependency injection",
        "ioc",
        "inversion of control",
        "container"
    ],
    "authors": [
        {
            "name": "Paul M. Jones",
            "email": "pmjones@pmjones.io"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/container": "^2.0"
    },
    "provide": {
        "psr/container-implementation" : "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Capsule\\Di\\": "src/"
        }
    },
    "require-dev": {
        "pds/skeleton": "^1.0",
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "pmjones/php-styler": "0.x-dev"
    },
    "autoload-dev": {
        "psr-4": {
            "Capsule\\Di\\": "tests/"
        }
    },
    "scripts": {
        "analyze": "./vendor/bin/phpstan analyze -c phpstan.neon",
        "check": "composer cs-fix && composer test && composer analyze",
        "cs-fix": "./vendor/bin/php-styler apply",
        "test": "./vendor/bin/phpunit"
    }
}
